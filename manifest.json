{
    "manifest_version" : 2,
    "name": "gistcount",
    "version": "0.1",
    "description": "Count number of words in a Github Gist",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_title": "gistcount",
        "default_popup": "popup.html"
    },
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
} 
